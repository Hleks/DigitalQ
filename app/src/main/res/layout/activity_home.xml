<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/colorWindowBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/peoplestand"
            android:id="@+id/imageView5"
            android:contentDescription=""
            tools:ignore="ContentDescription"
            android:scaleType="fitXY" />

        <TextView
            android:text="@string/queue_in_your_comfort_zone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lblSlogan"
            android:textAlignment="center"
            android:textStyle="normal|italic"
            android:textSize="36sp"
            android:fontFamily="monospace"
            android:textColor="@color/colorNavyBlue"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_list_white_48dp"
                android:id="@+id/lyDepartments"
                android:layout_weight="1"
                android:contentDescription=""
                tools:ignore="ContentDescription" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_account_box_white_48dp"
                android:id="@+id/imbPofile"
                android:layout_weight="1"
                android:contentDescription=""
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_location_on_white_48dp"
                android:id="@+id/imbLocation"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/baseline_info_white_48dp"
                android:id="@+id/imbAbout"
                android:layout_weight="1"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <Button
            android:text="logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btnLogout"
            tools:ignore="HardcodedText"
            android:textColor="@android:color/white" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>